<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>-->
    </style>

    <style name="title_text_appearance" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tab_text_appearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LargerTextBlack">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="LargeTextBlack">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="NormalTextBlack">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="NormalTextGray">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="SmallTextBlack">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <!--ToolBar标题文字大小-->
    <style name="toolbar_title">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <!--ViewPager里面显示的文字样式-->
    <style name="text_viewPage">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ImageTranslucentTheme" parent="AppTheme"/>

    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:text">更多</item>
    </style>
</resources>
